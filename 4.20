#!/bin/bash
getc()
{
stty raw
temp=`dd bs=1 count=1 2>/dev/null`
$1='$tmp'
stty cooked
}
press_any_key()
{
echo -n "Strike any key to continue..."
getc anychar
}

echo -n "Enter a character:"
getc char
echo
echo "You entered $char"
press_any_key char
echo 
$ ex20
Enter a character:A
You entered A
Strike any key to continue...B
